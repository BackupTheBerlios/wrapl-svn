BASENAME = $(BIN_DIR)riva
PROGRAM = $(BASENAME)$(EXE)

CFLAGS += -std=gnu99

FILES[] =
	directory
	log
	log2
	main
	memory
	module
	native
	riva
	stringtable
	symbol
	thread

if $(equal $(OSTYPE), Win32)
	FILES += stpcpy
	export

LDFLAGS += -lz -lgc -lconfuse
CProgram($(BASENAME), $(FILES))

Riva: $(PROGRAM)

.DEFAULT: Riva
