BASENAME = $(LIB_DIR)Wrapl

LDFLAGS += Lang.rlib Riva.rlib Util.rlib Sys$(DIRSEP)Module.rlib IO$(DIRSEP)Stream.rlib IO$(DIRSEP)File.rlib
CFLAGS += -x c++ -fpermissive -fno-exceptions -fno-rtti -Wno-non-virtual-dtor -I$(OBJ_DIR)Wrapl -I$(SRC_DIR)Wrapl

FILES[] =
	assembler
	bitset
	compiler
	integertable
	missing
	parser
	scanner
	stringtable
	system
	wrapl

if $(equal $(OSTYPE), Win32)
	FILES += stpcpy
	LDFLAGS += C:\Apps\Mingw\lib\gcc\i686-pc-mingw32\4.1.2\libgcc.a
	export

LocalCGeneratedFiles(assembler-internal.c keywords.c)
	
assembler-internal.c: $(file assembler-internal.dasc)
	lua $(DEV_BIN)dynasm.lua $(file assembler-internal.dasc) > assembler-internal.c

keywords.c: $(file keywords.lst)
	gperf -S 3 -L C++ -C -t -K Name -Z keyword -H hash -N lookup $(file keywords.lst) > keywords.c

RivaProgram($(LIB_DIR)Wrapl, $(FILES))

Wrapl: $(LIB_DIR)Wrapl.riva

clean:
	$(rm -f assembler-internal.c keywords.c)
