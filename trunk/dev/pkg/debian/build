mkdir wrapl-$1
cd wrapl-$1
mkdir DEBIAN
cat > DEBIAN/control <<EOF
Package: wrapl
Version: 0.7
Architecture: i386
Depends: `../version libconfuse0`, `../version libgmp3c2`, `../version libc6`
Section: devel
Priority: optional
Maintainer: Raja Mukherji <rajamukherji@gmail.com>
Description: Wrapl, The Programming Language
  Wrapl is a high level dynamically compiled programming language.
  More details can be found at http://wrapl.berlios.de
EOF
mkdir usr
mkdir usr/bin
mkdir usr/lib
mkdir usr/lib/riva
mkdir usr/share
mkdir usr/share/doc
mkdir usr/share/doc/wrapl
cp ../../../../bin/riva usr/bin
sed s/"\/usr\/local\/bin\/riva"/"\/usr\/bin\/riva"/ ../../../../bin/wrapl > usr/bin/wrapl
chmod a+x usr/bin/wrapl
cp ../../../../bin/riva.conf usr/bin
cp -r ../../../../lib/* usr/lib/riva/
cd usr/lib/riva
rm -rf `find -name "\.svn"`
cd ../../..
cp ../src/copyright usr/share/doc/wrapl/
cd ..
dpkg-deb --build wrapl-$1
rm -rf wrapl-$1
